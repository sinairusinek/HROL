                 <correspDesc xml:id="Manar2">
                     <correspAction type="sent">
                         <persName>אבשלום פיינברג</persName>
                         <placeName>אלכסנדריה</placeName>
                         <date when="1915-09-26">26.09.1915</date>
                     </correspAction>
                     <correspAction type="received">
                         <persName>רבקה אהרונסון</persName>
                         <placeName>זכרון יעקב</placeName>
                     </correspAction>
